  <!-- JQuery -->
  <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

  <!-- Custom Scripts -->
  <script defer src="/scripts/app.js"></script>
  <script defer src="/scripts/userListings.js"></script>
</head>

<body>

<!---------------------- Nav Bar --------------------------->
  <%- include('partials/nav-bar') %>

 <!---------------------- Header --------------------------->


  <hr class="hr hr-blurry" /> <!--Horizontal Spacing -->

  <h2 class="pb-3 mb-4 favourites-header figtree">
    My Active Listings
  </h2>
<!-- USER'S NON-DELETED POSTS (ACTIVE) -->
  <div class="table-container">
    <table class="table text-center">
      <thead class="table-light">
        <tr class="text-center">
          <th scope="col">Image</th>
          <th scope="col">Title</th>
          <th scope="col">Price</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>

      <tbody>
        <!-- Responsive Template -->
        <% usersActiveListings.forEach(listing => { %>
          <tr class="listing-entry" data-listing-id="<%= listing.id %>">
            <td class="item-image">
              <a href="/listings/<%= listing.id %>">
                <img src="<%= listing.image_path %>" alt="<%= listing.title %>">
              </a>
            </td>
            <td class="item-title"><%= listing.title %></td>
            <td class="price"><%= '$' + listing.price_cents/100 + '.00' %></td>
            <td class="delete-item"><button type="button" class="btn btn-outline-danger toggle-listing-status">Delete</button></td>
          </tr>
        <% }); %>
      </tbody>

    </table>
  </div>
<!-- USER'S DELETED POSTS (INACTIVE) -->
<h2 class="pb-3 mb-4 favourites-header figtree">
  My Deleted Listings
</h2>

  <div class="table-container">
    <table class="table text-center">
      <thead class="table-light">
        <tr class="text-center">
          <th scope="col">Image</th>
          <th scope="col">Title</th>
          <th scope="col">Price</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <!-- Responsive Template -->
        <% usersInactiveListings.forEach(listing => { %>
          <tr class="listing-entry" data-listing-id="<%= listing.id %>">
            <td class="item-image">
              <a href="/listings/<%= listing.id %>">
                <img src="<%= listing.image_path %>" alt="<%= listing.title %>">
              </a>
            </td>
            <td class="item-title"><%= listing.title %></td>
            <td class="price"><%= '$' + listing.price_cents/100 + '.00' %></td>
            <td class="repost-item"><button type="button" class="btn btn-outline-success my-2 my-sm-0 toggle-listing-status">Repost</button></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <hr class="hr hr-blurry" /> <!--Horizontal Spacing -->
  <hr class="hr hr-blurry" /> <!--Horizontal Spacing -->

 <!---------------------- Footer --------------------------->
<%- include('partials/footer') %>


