<body>

<!------------- Nav Bar -------------->
  <%- include('partials/nav-bar') %>

<!------------ Header ---------------->
  <h2 class="pb-3 mb-4 listings-header">
    Post A New Ad
  </h2>

<!------------ Main Container ---------------->
<div class="new-ad-container">
  <form>

    <div class="form-group">
      <label for="form-ad-title">Ad Title</label>
      <input type="text" class="form-control" id="form-ad-title" placeholder="Ad Title">

      <label for="form-description">Description</label>
      <textarea class="form-control" id="form-description" placeholder="Describe your listing...">
      </textarea>

      <label for="form-price">Price</label>
      <input type="number" class="form-control" id="form-price" placeholder="Enter price" min="0">

      <label class="my-1 mr-2" for="form-condition">Condition</label>
      <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
        <option selected>Choose...</option>
        <option value="1">New</option>
        <option value="2">Used</option>
      </select>


      <label class="my-1 mr-2" for="form-negotiable">Negotiable</label>
      <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
        <option selected>Choose...</option>
        <option value="1">Yes</option>
        <option value="2">No</option>
      </select>

      <div class="form-group">
        <label for="form-image">Image file input (jpeg)</label>
        <input type="file" class="form-control-file " id="form-image">
      </div>


    </div>
  </form>
</div>

  <hr class="hr hr-blurry" /> <!--Horizontal Spacing -->
  <hr class="hr hr-blurry" /> <!--Horizontal Spacing -->

