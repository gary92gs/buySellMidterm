<body>

<!---------------------- Nav Bar --------------------------->
  <%- include('partials/nav-bar') %>

 <!---------------------- Header --------------------------->


  <hr class="hr hr-blurry" /> <!--Horizontal Spacing -->

  <h3 class="pb-3 mb-4 favourites-header">
    My Favourites
  </h3>

<div class="table-container">
  <table class="table text-center">
    <thead class="table-light">
      <tr class="text-center">
        <th scope="col">Image</th>
        <th scope="col">Title</th>
        <th scope="col">Price</th>
        <th scope="col">Posted On</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
 <!-- Responsive Template -->
      <% favouriteListingsArr.forEach(function(listing) { %>
      <tr>
        <td class="item-image">
          <img src="<%= listing.url %>" alt="White Goose">
        </td>
        <td class="item-title"><%= listing.title %></td>
        <td class="price"><%= listing.price_cents %></td>
        <td class="posted-on">02/28/24</td>
        <td class="delete-item"><button type="button" class="btn btn-outline-danger">Delete</button></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>

  <hr class="hr hr-blurry" /> <!--Horizontal Spacing -->
  <hr class="hr hr-blurry" /> <!--Horizontal Spacing -->

 <!---------------------- Footer --------------------------->
