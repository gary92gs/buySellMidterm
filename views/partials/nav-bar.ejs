<!-- Condition to show these search params in the nav bar, includes search filter forms-->
<% if (showSearchFilters) { %>

    <!-- Location Filter -->
    <form id="setLocationForm" class="form-inline my-lg-2 my-sm-2" action="/listings" method="GET">


        <input class="form-control mr-sm-2 location-filter" type="text" placeholder="City" value="<%= filterObj.city %>" aria-label="Search" name="city" size="7">

        <input class="form-control mr-sm-2 location-filter" type="text" placeholder="Province" value="<%= filterObj.province %>" aria-label="Search" name="province" size="3">

        <input class="form-control mr-sm-2 location-filter" type="text" placeholder="Country" value="<%= filterObj.country %>" aria-label="Search" name="country" size="7" >

        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Set Location</button>

    </form>

    <!-- Price Filter -->
    <form id="setPriceRangeForm" class="form-inline my-lg-4 my-sm-2" action="/listings" method="GET">

          <input class="form-control mr-sm-2" type="text" placeholder="Min ($)" value="<%= ((filterObj.priceCentsMin/100) ? filterObj.priceCentsMin/100 : '') %>" aria-label="Search" name="priceMin" size="6">
          <input class="form-control mr-sm-2" type="text" placeholder="Max ($)" value="<%= ((filterObj.priceCentsMax/100) ? filterObj.priceCentsMax/100 : '') %>" aria-label="Search" name="priceMax" size="6">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Set ($)</button>
    </form>

    <!-- Search Filter -->
    <form id="userSearchForm" class="form-inline my-lg-4 my-sm-2" action="/listings" method="GET">

      <input class="form-control mr-sm-2" type="text" placeholder="Search" value="<%= filterObj.userSearch %>" aria-label="Search" name="userSearch" size="12">

      <button class="btn btn-outline-success my-sm-0" type="submit">Search</button>

    </form>
<% } %>
