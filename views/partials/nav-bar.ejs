</head>

<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
  <a href="/" class="navbar-brand">
    <!-- Deal Dock Logo on top left-hand side of nav -->
    <img src="/website_images/logo_deal_dock.png" alt="Deal Dock Logo" class="deal-dock-logo">
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarsExampleDefault">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a id="post-ad-btn" class="btn btn-outline-info my-2 my-sm-0" href="/listings/new">Post Ad</a>
      </li>
    </ul>
    <!-- condition to show these search params in the nav bar -->
    <% if (showSearchFilters) { %>
    <!-- Include search filter forms -->
    <form id="setLocationForm" class="form-inline my-2 my-lg-0" action="/listings" method="GET">
      <input class="form-control mr-sm-2" type="text" placeholder="City" value="<%= filterObj.city %>" aria-label="Search" name="city" size="8">
      <input class="form-control mr-sm-2" type="text" placeholder="Province" value="<%= filterObj.province %>" aria-label="Search" name="province" size="8">
      <input class="form-control mr-sm-2" type="text" placeholder="Country" value="<%= filterObj.country %>" aria-label="Search" name="country" size="8">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Set Location</button>
    </form>

    <form id="setPriceRangeForm" class="form-inline my-2 my-lg-0" action="/listings" method="GET">
      <input class="form-control mr-sm-2" type="text" placeholder="Min ($)" value="<%= ((filterObj.priceCentsMin/100) ? filterObj.priceCentsMin/100 : '') %>" aria-label="Search" name="priceMin" size="6">
      <input class="form-control mr-sm-2" type="text" placeholder="Max ($)" value="<%= ((filterObj.priceCentsMax/100) ? filterObj.priceCentsMax/100 : '') %>" aria-label="Search" name="priceMax" size="6">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Set Price Range</button>
    </form>

    <form id="userSearchForm" class="form-inline my-2 my-lg-0" action="/listings" method="GET">
      <input class="form-control mr-sm-2" type="text" placeholder="Search" value="<%= filterObj.userSearch %>" aria-label="Search" name="userSearch" size="12">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
    <% } %>

<!--Heart Icon -->
    <a class="py-2 mx-2" href="/favourites">
      <i class="fa-regular fa-heart nav-item heart-icon"></i>
    </a>

<!--My Listings Icon -->
<a class="py-2 mx-2" href="/listings/Mylistings">
  <i class="fa-solid fa-sheet-plastic nav-item my-listings"></i>
</a>

<!--Logout Icon -->
<a id="logoutButton" class="py-2 mx-2" href="/logout">
  <i class="fa-solid fa-right-from-bracket logout-icon"></i>
</a>




